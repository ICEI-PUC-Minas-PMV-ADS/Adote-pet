@model Projeto_Adote_Pet.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
 
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Digite seu email cadastrado" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
 
 
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" placeholder="Digite sua senha cadastrada" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
  
            <!--Botões da tela de login-->
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-outline-primary" />
                <a class="btn btn-outline-success" asp-controller="Usuarios" asp-action="Create">Cadastrar</a>                
            </div> 
            
            <!--Aviso de senha inválida-->
            <h4>@ViewBag.Message</h4>                        
            
        </form>

                

    </div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
