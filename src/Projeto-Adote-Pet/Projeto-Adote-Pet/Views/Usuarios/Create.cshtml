@model Projeto_Adote_Pet.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<div>
        <h2><img src="~/images/icone-adicionar.png" alt="Criar" width="30"/> Cadastre-se abaixo</h2>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Perfil" class="control-label"></label>
                <select asp-for="Perfil" class="form-control" asp-items="Html.GetEnumSelectList<Perfil>()"></select>
                <span asp-validation-for="Perfil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" placeholder="Números do seu CPF"/>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Seu nome aqui"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="email@dominio.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" placeholder="Ex.: (31) 98765-4321"/>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" onkeyup="checkSenha()" id="Senha" class="form-control" placeholder="Senha para seu logon"/>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <!--Confirmação de senha-->
             <div class="form-group">
                <label asp-for="ConfirmeSenha" class="control-label">Confirmação de Senha</label>
                <input asp-for="ConfirmeSenha" onkeyup="checkSenha()" id="ConfirmeSenha" class="form-control" placeholder="Repita sua senha"/>
                <span asp-validation-for="ConfirmeSenha" class="text-danger"></span>
                <br />
                <p id="msgsenha">&nbsp;</p>
            </div>
            
            <div class="form-group">
                <input type="image" src="~/images/icone-salvar.png" width="60" value="Salvar" class="btn btn-outline-success" />
            </div>

            <div class="p-2 bd-highlight">
	            <a class="container-fluid" href="#" id="forgot-pass">Esqueceu a senha?</a>
	          </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
