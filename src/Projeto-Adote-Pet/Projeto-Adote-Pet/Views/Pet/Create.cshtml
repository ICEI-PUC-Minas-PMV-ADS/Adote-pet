@using static Projeto_Adote_Pet.Models.PetViewModel
@model Projeto_Adote_Pet.Models.PetViewModel

@{
    ViewData["Title"] = "Create";
}
<div>
<h2><img src="~/images/image-adicao.png" width="45"/>Cadastre o Pet</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <fieldset class="form-group" id="cStatus"><legend>Status</legend>
                <input asp-for="Pstatus" id="cAdo" name="Pstatus" value="Adotado" type="radio"> <label for="cAdo">Adotado</label>
                <input asp-for="Pstatus" id="cDisp" name="Pstatus" value="Disponível" type="radio"> <label for="cDisp">Disponível</label> 
            </fieldset>             
            <fieldset class="form-group"><legend>Espécie</legend>
                <input asp-for="Especie" id="cCao" name="Especie" value="Cachorro" type="radio"> <label for="cCao">Cachorro</label>                   
                <input asp-for="Especie" id="cGato" name="Especie" value="Gato" type="radio"> <label for="cGato">Gato</label>                     
            </fieldset>
            
            <fieldset class="form-group" id="cSexo"><legend>Sexo</legend>                
                <input asp-for="Sexo" id="cFem" name="Sexo" value="Fêmea" type="radio"> <label for="cFem">Fêmea</label>
                <input asp-for="Sexo" id="cMac" name="Sexo" value="Macho" type="radio"> <label for="cMac">Macho</label>
            </fieldset>                                   
            <div class="form-group">
                <label asp-for="Raca" class="control-label"></label>
                <input asp-for="Raca" class="form-control" placeholder="Informe a raça do Pet"/>
                <span asp-validation-for="Raca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" placeholder="Coloque a idade em meses ou em anos"/>
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>

            <fieldset class="form-group"><legend>Porte</legend>
                <input asp-for="Porte" id="cPeq" name="Porte" value="Pequeno" type="radio"> <label for="cPeq">Pequeno</label>                    
                <input asp-for="Porte" id="cMed" name="Porte" value="Médio" type="radio"> <label for="cMed">Médio</label> 
                <input asp-for="Porte" id="cGra" name="Porte" value="Grande" type="radio"> <label for="cGra">Grande</label>                     
            </fieldset>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Nome do Pet"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label"></label>
                <input asp-for="Cor" class="form-control" placeholder="Cor ou cores do Pet" />
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" placeholder="Nome completo da cidade que está o Pet" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" asp-items="Html.GetEnumSelectList<EstadoEnum>()"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" placeholder="Descreva um pouco sobre o Pet"/>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
         
            <!--Início Foto-->
            <div class="form-group">
                 <label asp-for="Foto" class="control-label"></label>
                 <div class="custom-file">
                    <input asp-for="Foto" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Escolha a imagem</label>
                 </div>
                     <span asp-validation-for="Foto" class="text-danger"></span>
             </div>

            <!--Fim da parte da foto-->         
            
            <div class="form-group">                
                <input type="image" src="~/images/icone-salvar.png" width="60" value="Salvar" class="btn btn-outline-success" />
                <a asp-action="Index"><img src="~/images/icone-voltar.png" width="60" class="btn btn-secondary"></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        // incluir o codigo abaixo se desejar que o nome do arquivo apareça no select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
